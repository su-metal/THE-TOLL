{
  "manifest_version": 3,
  "name": "THE TOLL - Squat to Unlock",
  "version": "1.0.2",
  "description": "Block YouTube until you complete 5 squats on your phone",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://*.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["lib/qrcode.min.js", "content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "THE TOLL Settings"
  }
}
